{
	"compileOnSave": false,
	"compilerOptions": {
		"baseUrl": ".",
		"rootDir": ".",
		"declaration": false,
		"module": "ESNext",
		"moduleResolution": "Node",
		"target": "ES2023",
		"skipDefaultLibCheck": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"importHelpers": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"strict": true,
		"paths": {
			"@nx-monorepo/ui": ["libs/components/ui/src/index.ts"]
		}
	},
	"exclude": ["node_modules"]
}
